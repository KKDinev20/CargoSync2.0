<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="/assets/logo.svg">
    <link rel="stylesheet" href="~/CargoSync.Presentation.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="/assets/logo.svg" alt="CargoSync">
                </span>

                <div class="text logo-text">
                    <span class="name">CargoSync</span>
                    <span class="profession">Deliveries Tracking</span>
                </div>
            </div>
        </header>

        <div class="menu-bar">
            <div class="menu">

                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="~/">
                            <i class='bx bx-home-alt icon'></i>
                            <span class="text nav-text">Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a asp-controller="CargoManagement" asp-action="Index">
                            <i class='bx bx-bar-chart-alt-2 icon'></i>
                            <span class="text nav-text">Cargo Management</span>
                        </a>
                    </li>



                    <li class="nav-link">
                        <a href="@Url.Action("Index", "Settings")">
                            <i class='bx bx-cog icon'></i>
                            <span class="text nav-text">Settings</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="@Url.Action("Index", "FAQ")">
                            <i class='bx bx-help-circle icon'></i>
                            <span class="text nav-text">FAQ</span>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src ="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
