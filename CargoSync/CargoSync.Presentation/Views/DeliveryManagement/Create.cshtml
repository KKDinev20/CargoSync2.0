@model CargoSync.DataAccess.Models.Delivery

<div class="dashboard">
    <div class="dash-content">
        <div class="activity">
            <div class="title">
                <span class="text">Deliveries</span>
            </div>
            <div class="delivery-form">
                <form asp-controller="DeliveryManagement" asp-action="Create" method="post" class="create-form" style="max-width: 400px; margin: auto;">
                    <div class="form-group" style="margin-bottom: 15px;">
                        <label asp-for="Destination" style="display: block; margin-bottom: 5px;">Destination:</label>
                        <input asp-for="Destination" class="form-control" />
                        <span asp-validation-for="Destination" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-bottom: 15px;">
                        <label asp-for="ETA" style="display: block; margin-bottom: 5px;">ETA:</label>
                        <input asp-for="ETA" class="form-control" />
                        <span asp-validation-for="ETA" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-bottom: 15px;">
                        <label asp-for="Status" style="display: block; margin-bottom: 5px;">Status:</label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>
